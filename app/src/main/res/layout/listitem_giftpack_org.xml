<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:minHeight="86dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/common_left_margin"
    android:paddingTop="@dimen/common_left_margin"
    android:paddingBottom="@dimen/common_left_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/giftpack_orgcover"
        android:layout_width="@dimen/img_foureper"
        android:layout_height="@dimen/img_threeeper"
        fresco:actualImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/im_default"
        fresco:placeholderImageScaleType="centerInside"
        fresco:roundAsCircle="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/giftpack_orgtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="@color/text_color12"
            android:textSize="@dimen/font_size_more"
            tools:text="标题" />
        <TextView
            android:id="@+id/giftpack_orgaddress"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_size_small"
            android:drawablePadding="5dp"
            tools:text="描述"
            android:textColor="@color/text_color2"
            android:drawableLeft="@drawable/icon_positioning"/>
    </LinearLayout>
    <TextView
        android:id="@+id/giftpack_call"
        android:paddingTop="5dp"
        android:drawableTop="@drawable/btn_phone_n"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/text_color15"
        android:text="咨询"/>
</LinearLayout>
