<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/style_bg3"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout_include"
        layout="@layout/titlebar" />
    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:layout_below="@+id/title_layout_include"
        android:id="@+id/rl_modulename_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_below="@+id/title_layout_include"
            android:id="@+id/manage_group_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/style_bg8"
            android:divider="@color/style_bg3"
            android:scrollbars="none"
            android:dividerHeight="@dimen/dp1" />
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>
    <View
        android:layout_below="@+id/rl_modulename_refresh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/bg_1" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/btn_bg6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/manage_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/icon_add_group"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center_vertical"
            android:text="添加分组"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />
    </RelativeLayout>
</RelativeLayout>