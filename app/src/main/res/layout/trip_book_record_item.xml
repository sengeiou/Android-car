<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp10">

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/divider2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/icon_car1_green" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginTop="@dimen/dp15"
        android:paddingRight="@dimen/dp10">

        <RelativeLayout
            android:id="@+id/titleRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/addressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp10" />

            <ImageView
                android:id="@+id/navigationIv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_qnw" />
        </RelativeLayout>
        <com.tgf.kcwc.view.MyListView
            android:scrollbars="none"
            android:layout_below="@+id/titleRl"
            android:id="@+id/bodyList"
            android:layout_marginTop="@dimen/dp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.tgf.kcwc.view.MyListView>

    </RelativeLayout>
</LinearLayout>