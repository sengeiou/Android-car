<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemselect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/thumbnail"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/cheshi"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@drawable/im_default"
                fresco:placeholderImage="@drawable/im_default"
                fresco:placeholderImageScaleType="fitXY" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namic"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:text="奥迪-奥迪进口-奥迪TT"
                    android:textColor="@color/app_title_color1"
                    android:textSize="@dimen/font_size_title" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/cartype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微型车"
                        android:textColor="@color/text_color14"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="￥万一￥万"
                        android:textColor="@color/text_color20"
                        android:textSize="@dimen/font_size_small" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_def" />

        <RelativeLayout
            android:id="@+id/cartotal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/cartotalname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4款标准车型"
                android:textColor="@color/text_color14"
                android:textSize="@dimen/font_size_small" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_nextjiantou" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_def" />

        <RelativeLayout
            android:id="@+id/organization"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/organizationname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4款店内展车"
                android:textColor="@color/text_color14"
                android:textSize="@dimen/font_size_small" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_nextjiantou" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_def" />

        <RelativeLayout
            android:id="@+id/threadgoods"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/threadgoodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21条车主自售信息"
                android:textColor="@color/text_color14"
                android:textSize="@dimen/font_size_small" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_nextjiantou" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/split_line_color" />

    </LinearLayout>
</LinearLayout>