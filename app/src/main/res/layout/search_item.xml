<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:line="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/search_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp34"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/white">

        <ImageView
            android:layout_width="@dimen/dp3"
            android:layout_height="match_parent"
            android:background="@drawable/common_left_line" />

        <TextView
            android:id="@+id/search_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:text="检索行为分析(一周内)"
            android:textColor="@color/text_bg"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/search_select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp11"
            android:text="周期选择"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp10" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/style_bg4" />

    <LinearLayout
        android:id="@+id/brandPriceLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/search_brand_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp30"
                android:paddingTop="@dimen/dp10">

                <TextView
                    android:id="@+id/search_brand_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_analysis_left"
                    android:drawablePadding="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:text="倾向品牌："
                    android:textColor="@color/storebelowbutton_orange"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/search_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp17"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:textColor="@color/storebelowbutton_orange"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <com.tgf.kcwc.view.LinePieView
                android:id="@+id/search_line_pie_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_price_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp30"
                android:paddingTop="@dimen/dp10">

                <TextView
                    android:id="@+id/search_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_analysis_left"
                    android:drawablePadding="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:text="倾向价格："
                    android:textColor="@color/storebelowbutton_orange"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/search_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp17"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:textColor="@color/storebelowbutton_orange"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.tgf.kcwc.view.StraightChartView
                    android:id="@+id/search_straight_chart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp200"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>