<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mlinearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1.3">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/appltlist_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:visibility="visible"
                fresco:retryImageScaleType="fitXY" />

            <ImageView
                android:id="@+id/appltlist_item_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_baoming" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appltlist_item_title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="2"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="自驾游活动方式发的复活节啊哈哈"
                android:textColor="@color/app_title_color1"
                android:textSize="@dimen/font_size_title" />

            <TextView
                android:id="@+id/appltlist_item_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="类型：跑山"
                android:textColor="@color/app_title_color1"
                android:textSize="@dimen/font_size_medium" />

            <LinearLayout
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_orange" />

                <TextView
                    android:id="@+id/appltlist_item_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="34/111"
                    android:textColor="@color/app_title_color1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/watch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/btn_eye1" />

                    <TextView
                        android:id="@+id/found_list_view_look"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/text_color12"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/btn_heart1" />

                    <TextView
                        android:id="@+id/found_list_view_like"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/text_color12"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/btn_comments_n" />

                    <TextView
                        android:id="@+id/found_list_view_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/text_color12"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_content_color" />

    <LinearLayout
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/btn_green" />

        <TextView
            android:id="@+id/appltlist_item_startcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="重庆"
            android:textColor="@color/app_title_color1"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/app_layout_bg_color2" />

        <TextView
            android:id="@+id/appltlist_item_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="重庆市渝中区时代天街1号1号重庆市渝中区时代天街1号1号"
            android:textColor="@color/tab_text_n_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/btn_red" />

        <TextView
            android:id="@+id/appltlist_item_overcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="拉萨"
            android:textColor="@color/app_title_color1"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/app_layout_bg_color2" />

        <TextView
            android:id="@+id/appltlist_item_over"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="重庆市渝中区时代天街1号1号重庆市渝中区时代天街1号1号"
            android:textColor="@color/tab_text_n_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appltlist_item_rendezvous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/btn_red" />

        <TextView
            android:id="@+id/appltlist_item_rendcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="拉萨"
            android:textColor="@color/app_title_color1"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/app_layout_bg_color2" />

        <TextView
            android:id="@+id/appltlist_item_rend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="重庆市渝中区时代天街1号1号重庆市渝中区时代天街1号1号"
            android:textColor="@color/tab_text_n_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/icon_time" />

        <TextView
            android:id="@+id/appltlist_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="2017.03.15 21:30 至 2017.03.25 21:30"
            android:textColor="@color/tab_text_n_color"
            android:textSize="@dimen/font_size_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_content_color" />

    <LinearLayout
        android:id="@+id/appltlist_item_starttravel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_button_height"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/appltlist_item_sign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="签到"
            android:visibility="gone"
            android:textColor="@color/text_state_color"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/text_content_color" />

        <TextView
            android:id="@+id/appltlist_item_diary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="途记"
            android:textColor="@color/text_state_color"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/text_content_color" />

        <TextView
            android:id="@+id/appltlist_item_drive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="驾途"
            android:visibility="gone"
            android:textColor="@color/text_state_color"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/text_content_color" />

        <TextView
            android:id="@+id/appltlist_item_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="群聊"
            android:textColor="@color/text_state_color"
            android:textSize="@dimen/font_size_medium"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appltlist_item_applying"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_button_height"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/appltlist_item_cancelapply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消活动"
            android:textColor="@color/text_state_color"
            android:textSize="@dimen/font_size_more" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/text_content_color" />

        <TextView
            android:id="@+id/appltlist_item_compile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/text_state_color"
            android:textSize="@dimen/font_size_more" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/text_content_color" />

        <TextView
            android:id="@+id/appltlist_item_audit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="审核"
            android:textColor="@color/text_state_color"
            android:textSize="@dimen/font_size_more" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/text_content_color" />

        <TextView
            android:id="@+id/appltlist_item_cancelgroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="群聊"
            android:textColor="@color/text_state_color"
            android:textSize="@dimen/font_size_more"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/appltlist_item_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_button_height"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/appltlist_item_enddiary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="途记"
            android:textColor="@color/text_state_color"
            android:textSize="@dimen/font_size_title" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/text_content_color" />

        <TextView
            android:id="@+id/appltlist_item_endgroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="群聊"
            android:textColor="@color/text_state_color"
            android:textSize="@dimen/font_size_title"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_content_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/app_layout_bg_color2" />
</LinearLayout>