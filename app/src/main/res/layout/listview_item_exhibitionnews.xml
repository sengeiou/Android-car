<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="33dp"
        android:layout_height="333dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:background="@color/btn_bg1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/icon_event" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/btn_bg1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:orientation="vertical">


        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginTop="20dp"
            android:id="@+id/newslist_cover"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/common_left_margin"
            android:layout_height="247dp"
            fresco:actualImageScaleType="fitXY" />


        <TextView
            android:id="@+id/newslist_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height"
            android:background="@color/app_main_color1"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:layout_marginRight="@dimen/common_left_margin"
            android:paddingLeft="@dimen/common_left_margin"
            android:text="这是展会看新闻快讯"
            android:textColor="@color/text_nav_def_color"
            android:textSize="@dimen/font_size_more" />

        <TextView
            android:id="@+id/newslist_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_main_color1"
            android:gravity="top"
            android:layout_marginRight="@dimen/common_left_margin"
            android:paddingLeft="@dimen/common_left_margin"
            android:text="2016.06.06 08:30"
            android:textColor="@color/text_def"
            android:textSize="@dimen/font_size_small" />

    </LinearLayout>


</LinearLayout>
