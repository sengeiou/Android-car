<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <RelativeLayout
            android:id="@+id/headerImgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_left_margin">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/home_huodong_avatarIv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/im_default"
                fresco:placeholderImage="@drawable/rp_avatar"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:roundAsCircle="true" />

            <ImageView
                android:id="@+id/genderImg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@id/home_huodong_avatarIv"
                android:layout_alignRight="@id/home_huodong_avatarIv"
                android:src="@drawable/icon_men" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_left_margin"
            android:layout_toRightOf="@id/headerImgLayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/homeHuodong_userNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:maxLength="8"
                    android:text="潇洒哥你好呀够了"
                    android:textColor="@color/text_color21"
                    android:textSize="@dimen/font_size_medium" />

                <ImageView
                    android:id="@+id/homeHuodong_modelIv"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_model" />

                <ImageView
                    android:id="@+id/homeHuodong_hotmanIv"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_daren" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/homeHuodong_brandIv"
                    android:layout_width="40dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:scaleType="fitCenter"
                    fresco:actualImageScaleType="fitCenter"
                    fresco:placeholderImageScaleType="fitCenter" />
            </LinearLayout>

            <TextView
                android:id="@+id/homeHuodong_createTimeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:text="刚刚"
                android:textColor="@color/text_color17"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <ImageView
            android:id="@+id/homeHuodong_domoreIv"
            android:layout_width="31dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/common_left_margin"
            android:scaleType="centerInside"
            android:src="@drawable/loc_drop_down" />
    </RelativeLayout>

    <TextView
        android:id="@+id/homeHuodong_typeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/homeleft_margin"
        android:layout_marginRight="@dimen/common_left_margin"
        android:layout_marginTop="8dp"
        tools:text="发布了请你玩活动，一起来加入吧！"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/sp15" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginLeft="@dimen/homeleft_margin"
        android:layout_marginRight="@dimen/homeleft_margin"
        android:layout_marginTop="@dimen/common_left_margin">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/homeHuodong_coverIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:actualImageScaleType="centerCrop" />

        <TextView
            android:id="@+id/homeHuodong_joinNumTv"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_gravity="bottom|right"
            android:background="@color/transparent40b"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="已报:22人 /上限:33人"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10" />

        <ImageView
            android:id="@+id/homeview_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:src="@drawable/btn_apply" />

    </FrameLayout>

    <TextView
        android:id="@+id/homeHuodong_titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/hometop_margin"
        android:layout_marginLeft="@dimen/homeleft_margin"
        android:layout_marginRight="@dimen/homeleft_margin"
        android:layout_marginTop="@dimen/hometop_margin"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:text="活动标题活动标题活动标题活动标题活动标题活动
题活动标题"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/sp15" />

    <TextView
        android:id="@+id/homeHuodong_directionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_left_margin"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:layout_marginRight="@dimen/common_left_margin"
        android:singleLine="true"
        android:text="目的地：重庆  武隆风景区"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/homeHuodong_timeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:layout_marginRight="@dimen/common_left_margin"
        android:text="2016.03.25 21:00 至 2016.05.27 00:00"
        android:textColor="@color/text_color17"
        android:textSize="@dimen/sp12" />

    <LinearLayout
        android:id="@+id/homeHuodong_orgLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:layout_marginRight="@dimen/common_left_margin"
        android:layout_marginTop="7dp"
        android:background="@color/app_layout_bg_color2"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/homeHuodong_orgCoverIv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            fresco:actualImageUri="fitXY" />

        <TextView
            android:id="@+id/homeHuodong_orgNameTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_left_margin"
            android:gravity="center_vertical"
            android:text="重庆奥迪大坪4S店 诚邀"
            android:textColor="@color/text_color15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_createPlaceLayout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:layout_marginRight="@dimen/common_left_margin"
        android:layout_marginTop="@dimen/common_left_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/homeHuodong_createPlaceTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_location"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="重庆市渝北区龙溪镇松石道80号附5号"
            android:textColor="@color/text_color17" />

        <TextView
            android:id="@+id/homeHuodong_distanceTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="918.21km"
            android:textColor="@color/text_color17" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/homeleft_margin"
        android:layout_marginRight="@dimen/homeleft_margin"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/homeHuodong_visitors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/listviewitem_focuson"
            android:layout_toStartOf="@+id/listviewitem_focuson"
            android:drawableLeft="@drawable/icon_visitors"
            android:drawablePadding="@dimen/common_left_margin"
            android:text="267"
            android:textColor="@color/text_nav_def_color"
            android:textSize="@dimen/font_size_tiny" />

        <ImageView
            android:id="@+id/homeHuodong_islikeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/icon_like" />

        <TextView
            android:id="@+id/homeHuodong_focuson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="267"
            android:textColor="@color/text_nav_def_color"
            android:textSize="@dimen/font_size_tiny" />

        <TextView
            android:id="@+id/homeHuodong_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/common_left_margin"
            android:drawableLeft="@drawable/icon_comments"
            android:drawablePadding="@dimen/common_left_margin"
            android:text="267"
            android:textColor="@color/text_nav_def_color"
            android:textSize="@dimen/font_size_tiny" />
    </LinearLayout>
</LinearLayout>
