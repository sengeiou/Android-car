<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/community_all"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/community_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp34"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/white">

        <ImageView
            android:layout_width="@dimen/dp3"
            android:layout_height="match_parent"
            android:background="@drawable/common_left_line" />

        <TextView
            android:id="@+id/community_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@color/white"
            android:text="社区行为分析(一周内)"
            android:textColor="@color/text_bg"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/community_select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp11"
            android:background="@color/white"
            android:text="周期选择"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp10" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/style_bg4" />

    <LinearLayout
        android:id="@+id/keywordHobbyLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp10">

        <LinearLayout
            android:id="@+id/community_hobby_ll"
            android:padding="@dimen/dp11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_community_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/community_hobby_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_analysis_left"
                android:drawablePadding="@dimen/dp5"
                android:gravity="center_vertical"
                android:text="他的兴趣标签"
                android:textColor="@color/storebelowbutton_orange"
                android:textSize="@dimen/sp12" />
            <com.tgf.kcwc.view.MyGridView
                android:layout_marginTop="@dimen/dp13"
                android:layout_marginLeft="@dimen/dp21"
                android:layout_marginRight="@dimen/dp21"
                android:numColumns="3"
                android:id="@+id/community_grid"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/dp10"
                android:horizontalSpacing="@dimen/dp15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.tgf.kcwc.view.MyGridView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/community_keyword_ll"
            android:padding="@dimen/dp11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/shape_community_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/community_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_analysis_left"
                android:drawablePadding="@dimen/dp5"
                android:gravity="center_vertical"
                android:text="他常搜索的关键字"
                android:textColor="@color/storebelowbutton_orange"
                android:textSize="@dimen/sp12" />
            <com.tgf.kcwc.view.FlexBoxLayout
                android:id="@+id/community_flex"
                android:layout_marginLeft="@dimen/dp24"
                android:layout_marginRight="@dimen/dp24"
                android:layout_marginTop="@dimen/dp12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.tgf.kcwc.view.FlexBoxLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:padding="@dimen/dp11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/shape_community_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/community_browsed_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_analysis_left"
                android:drawablePadding="@dimen/dp5"
                android:gravity="center_vertical"
                android:text="他最近浏览这些帖子"
                android:textColor="@color/storebelowbutton_orange"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:padding="@dimen/dp11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/shape_community_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/community_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_analysis_left"
                android:drawablePadding="@dimen/dp5"
                android:gravity="center_vertical"
                android:text="他在这些群比较活跃"
                android:textColor="@color/storebelowbutton_orange"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>