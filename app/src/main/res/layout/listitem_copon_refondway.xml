<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:minHeight="34dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/refond_wayTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:gravity="center_vertical"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/font_size_small"
        tools:text="原路退回" />

    <TextView
        android:id="@+id/refond_wayDescTv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/text_color17"
        android:layout_alignBaseline="@id/refond_wayTv"
        android:textSize="@dimen/font_size_small"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        tools:text="(ding)"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/refond_statusIv"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:scaleType="centerInside"
        android:src="@drawable/refound_n" />
</LinearLayout>
