<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_customized_item_bg"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/customized_time"
        android:textSize="@dimen/sp12"
        android:text="2016.02.13 12:00"
        android:textColor="@color/text_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/dp14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="@dimen/dp10"
            android:id="@+id/customized_brand"
            android:textSize="@dimen/sp14"
            android:text="2016.02.13 12:00"
            android:textColor="@color/text_color9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="@dimen/dp10"
            android:layout_toRightOf="@+id/customized_brand"
            android:id="@+id/customized_price"
            android:textSize="@dimen/sp14"
            android:text="30万-40万"
            android:textColor="@color/customer_detail_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/text_color9"
            android:layout_toRightOf="@+id/customized_price"
            android:id="@+id/customized_seat"
            android:textSize="@dimen/sp14"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:textColor="@color/text_color9"
            android:layout_toRightOf="@+id/customized_seat"
            android:textSize="@dimen/sp14"
            android:text="座"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>