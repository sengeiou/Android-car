<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="50dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/honorIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        fresco:placeholderImage="@drawable/icon_dazong"
        fresco:placeholderImageScaleType="center"
        fresco:failureImage="@drawable/icon_dazong"
        fresco:failureImageScaleType="center"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/honorIcon"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_medium" />


    <TextView
        android:id="@+id/xpValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/text_color10"
        android:textSize="@dimen/font_size_medium" />

</RelativeLayout>