<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/titleBar"
        layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/icon_chenggong" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="恭喜您！兑换成功！"
                    android:textColor="@color/text_color14"
                    android:textSize="@dimen/font_size_m_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/style_bg8"
                android:gravity="center_vertical"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="您已获得"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_size_more" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1px"
                    android:background="@color/tab_text_s_color" />


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/commodityicon"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    fresco:actualImageScaleType="fitXY"
                    fresco:failureImage="@drawable/im_default"
                    fresco:failureImageScaleType="fitXY"
                    fresco:placeholderImage="@drawable/icon_the_default__diagram_n"
                    fresco:placeholderImageScaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/commodityname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="上海2017国际车展门票"
                        android:textColor="@color/text_color9"
                        android:textSize="@dimen/font_size_title" />

                    <TextView
                        android:id="@+id/commoditydescribe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:text="票总名称"
                        android:textColor="@color/text_color15"
                        android:textSize="@dimen/font_size_title"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/commoditynum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="数量：5"
                        android:textColor="@color/text_more"
                        android:textSize="@dimen/font_size_title" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/text_content_color" />

            <LinearLayout
                android:id="@+id/pickupmethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/style_bg8"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:text="领取方式"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size_more" />

                    <TextView
                        android:id="@+id/access"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="凭领取码现场领取"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size_more" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/receiveyardlayout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="领取码"
                            android:textColor="@color/text_more"
                            android:textSize="@dimen/font_size_more" />

                        <TextView
                            android:id="@+id/receiveyard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="#ceffde"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="XX001XX001"
                            android:textColor="@color/btn_color1"
                            android:textSize="@dimen/font_size_more" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="45dp"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="领取地"
                            android:textColor="@color/text_more"
                            android:textSize="@dimen/font_size_more" />

                        <TextView
                            android:id="@+id/receiveaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:paddingRight="10dp"
                            android:text="后台录入的领取地址"
                            android:textColor="@color/text_color9"
                            android:textSize="@dimen/font_size_more" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recipientslayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/addresslayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="收件人"
                                    android:textColor="@color/text_more"
                                    android:textSize="@dimen/font_size_more" />

                                <TextView
                                    android:id="@+id/recipients"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="13dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="某某某（13800001111）"
                                    android:textColor="@color/text_color9"
                                    android:textSize="@dimen/font_size_more" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="收件地址"
                                    android:textColor="@color/text_more"
                                    android:textSize="@dimen/font_size_more" />

                                <TextView
                                    android:id="@+id/consigneeaddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:padding="10dp"
                                    android:text="重庆市展览中心有限公司重庆展览中心重"
                                    android:textColor="@color/text_color9"
                                    android:textSize="@dimen/font_size_more" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/modification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="30dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="40dp"
                            android:src="@drawable/btn_nextjiantou" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/add_address"
                        android:layout_width="200dp"
                        android:layout_height="65dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="15dp"
                        android:visibility="gone"
                        android:background="@drawable/button_bg_continue_address"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=" + 添加收货地址"
                            android:textColor="@color/text_color14"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:paddingLeft="5dp"
                        android:text="看车玩车平台将于3~7个工作日内将商品寄出"
                        android:textColor="@color/text_more"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/text_content_color" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/membercenter"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_bg_today_employ"
                    android:gravity="center"
                    android:text="会员中心"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_title"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/continueexchange"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:background="@drawable/button_bg_continue_exchange"
                    android:gravity="center"
                    android:text="继续兑换"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_title" />

                <TextView
                    android:id="@+id/employ"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_bg_today_employ"
                    android:gravity="center"
                    android:text="立即使用"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_title"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>