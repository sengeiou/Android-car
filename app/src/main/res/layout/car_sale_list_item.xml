<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">


    <RelativeLayout
        android:id="@+id/baseInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/list_item_selector">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_size"
            android:layout_marginRight="@dimen/margin_right_size">


            <TextView
                android:id="@+id/carName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/text_color12"
                android:textSize="@dimen/font_size_title" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/carName"
                android:layout_marginTop="@dimen/margin_top_size"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_color17"
                android:textSize="@dimen/font_size_small" />


        </RelativeLayout>

    </RelativeLayout>


    <View
        android:id="@+id/split"
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_height_size"
        android:layout_below="@id/baseInfoLayout"
        android:background="@color/split_line_color3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/split"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/carDetailBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/btn_selector_3"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="车辆详情"
                    android:textColor="@color/text_color12"
                    android:textSize="@dimen/font_size_medium" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/split_line_color" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/btnCarConfig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/btn_selector_4"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="添加对比"
                    android:textColor="@color/text_color12"
                    android:textSize="@dimen/font_size_medium" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/split_line_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/goStoreBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/btn_selector_2"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="店内看"
                    android:textColor="@color/text_color12"
                    android:textSize="@dimen/font_size_medium" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/split_line_color" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/split2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_height_size"
        android:layout_alignParentBottom="true"
        android:background="@color/split_line_color" />
</RelativeLayout>