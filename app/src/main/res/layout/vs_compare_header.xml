<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_list_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent90_white"
    android:minHeight="35.0dip">

    <com.tgf.kcwc.view.DrawableCenterTextView
        android:id="@+id/list_header_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10.0dip"
        android:drawablePadding="5.0dip"
        android:drawableRight="@drawable/fitler_drop_down_n"
        android:gravity="center_vertical"
        android:text="基本配置"
        android:textColor="@color/text_color12"
        android:textSize="@dimen/font_size_medium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_standard_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_standard_circle"
            android:drawablePadding="5.0dip"
            android:gravity="center_vertical"
            android:text="标配 "
            android:textColor="@color/text_color12"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_hollow_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:drawableLeft="@drawable/icon_hollow_circle"
            android:drawablePadding="5.0dip"
            android:gravity="center_vertical"
            android:text="选配  - 无"
            android:textColor="@color/text_color"
            android:textSize="14.0sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/head_tips_divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_gravity="bottom"
        android:background="@color/split_line_color" />
</FrameLayout>