<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/popwin_supplier_listleft_lv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:cacheColorHint="@color/voucher_divide_line"
            android:dividerHeight="0dp"
            android:divider="@color/voucher_divide_line"
            android:fadingEdge="none"
            android:background="@color/voucher_divide_line"
            android:listSelector="@color/white"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="none"
            android:scrollingCache="false" />

        <ListView
            android:id="@+id/popwin_supplier_listright_lv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/voucher_divide_line"
            android:background="@color/white"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:listSelector="#00000000"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="none"
            android:scrollingCache="false" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/popwin_supplier_list_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:visibility="gone"
        android:orientation="vertical" />
</LinearLayout>