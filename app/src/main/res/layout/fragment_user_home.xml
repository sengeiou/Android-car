<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_layout_bg_color"
    android:fillViewport="true"
    android:scrollbars="none">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/part1Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp132"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/white">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp10">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/avatar"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignParentLeft="true"
                    fresco:actualImageScaleType="fitXY"
                    fresco:failureImage="@drawable/moto_testdetail"
                    fresco:failureImageScaleType="fitXY"
                    fresco:placeholderImage="@drawable/moto_testdetail"
                    fresco:placeholderImageScaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_toRightOf="@id/avatar">

                    <TextView
                        android:id="@+id/nicknameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="@color/text_color12"
                        android:textSize="@dimen/sp14" />


                    <TextView
                        android:id="@+id/heightTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nicknameTv"
                        android:text="张三"
                        android:textColor="@color/text_color17"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/bwhTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/heightTv"
                        android:text="张三"
                        android:textColor="@color/text_color17"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/attainmentTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bwhTv"
                        android:text="张三"
                        android:textColor="@color/text_color3"
                        android:textSize="@dimen/sp12" />
                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_below="@id/part1Layout"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/white" />


        <ListView
            android:id="@+id/list2"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_below="@id/list"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/white" />

    </RelativeLayout>


</ScrollView>