<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@color/app_layout_bg_color"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/common_left_margin">

            <include
                android:id="@+id/titleBar"
                layout="@layout/titlebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/wholemoto_more_rv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_row_height"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="整车"
                    android:textColor="@color/text_more" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="查看所有"
                    android:textColor="@color/app_main_color2" />


            </RelativeLayout>

            <GridView
                android:id="@+id/wholemoto_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="@dimen/griviewitem_margin"
                android:numColumns="3"
                android:verticalSpacing="@dimen/griviewitem_margin" />

            <RelativeLayout
                android:id="@+id/pointszmoto_more_rv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_row_height"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="细节"
                    android:textColor="@color/text_more" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="查看所有"
                    android:textColor="@color/app_main_color2" />


            </RelativeLayout>

            <GridView
                android:id="@+id/pointsemoto_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="@dimen/griviewitem_margin"
                android:numColumns="3"
                android:verticalSpacing="@dimen/griviewitem_margin" />


            <RelativeLayout
                android:id="@+id/livingmoto_more_rv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_row_height"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="现场"
                    android:textColor="@color/text_more" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="查看所有"
                    android:textColor="@color/app_main_color2" />


            </RelativeLayout>

            <GridView
                android:id="@+id/livingmoto_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="@dimen/griviewitem_margin"
                android:numColumns="3"
                android:verticalSpacing="@dimen/griviewitem_margin" />


        </LinearLayout>
    </ScrollView>
</merge>