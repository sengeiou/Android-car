<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/text_color47" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp54">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="@dimen/dp35"
                android:layout_height="@dimen/dp35"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp13"
                fresco:actualImageScaleType="fitXY"
                fresco:placeholderImage="@drawable/rp_avatar"
                fresco:placeholderImageScaleType="fitXY"
                fresco:roundAsCircle="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp35"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安然"
                        android:textColor="@color/text_color10"
                        android:textSize="@dimen/dp15" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/drivdetails_brandLogo"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/im_default"
                        fresco:actualImageScaleType="centerInside"
                        fresco:placeholderImageScaleType="fitCenter" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp4"
                    android:text="个性签名"
                    android:textColor="@color/text_color17"
                    android:textSize="@dimen/dp12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/redpack_joiner_addgaunzhuiv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/redpack_tianjiaguanzhu" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/homeleft_margin"
            android:background="@color/divider4" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp13">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/text_color17"
                    android:textSize="@dimen/dp15"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="13668040365"
                    android:gravity="right"
                    android:textColor="@color/text_color3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="红包名称"
                    android:textColor="@color/text_color17"
                    android:textSize="@dimen/dp15"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" 大吉大利，今晚吃鸡"
                    android:gravity="right"
                    android:textColor="@color/text_color3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="红包类型"
                    android:textColor="@color/text_color17"
                    android:textSize="@dimen/dp15"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" 现金红包"
                    android:gravity="right"
                    android:textColor="@color/text_color3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="领取红包"
                    android:textColor="@color/text_color17"
                    android:textSize="@dimen/dp15"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="￥302.00"
                    android:gravity="right"
                    android:textColor="@color/text_color3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="领取时间"
                    android:textColor="@color/text_color17"
                    android:textSize="@dimen/dp15"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2017-09-25 15:13"
                    android:gravity="right"
                    android:textColor="@color/text_color3"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
