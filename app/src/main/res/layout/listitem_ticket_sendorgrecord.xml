<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlTimeline"
        android:layout_width="32dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/refond_tvTopLine"
            android:layout_width="0.5dp"
            android:layout_height="22dp"
            android:layout_centerHorizontal="true"
            android:background="@color/split_line_color4" />

        <ImageView
            android:id="@+id/refond_tvDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@id/refond_tvTopLine"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_node_1_n" />

        <TextView
            android:id="@+id/refond_tvBottomLine"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_below="@id/refond_tvDot"
            android:layout_centerHorizontal="true"
            android:background="@color/split_line_color4" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sendrecore_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="2017年7月5日"
            android:textColor="@color/text_color17"
            android:textSize="@dimen/font_size_tiny" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_left_margin"
            android:background="@drawable/btn_radiuswhite_bg"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/homeleft_margin"
            android:padding="@dimen/common_margin">

            <com.tgf.kcwc.view.nestlistview.NestFullListView
                android:id="@+id/sendrecord_userlv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
