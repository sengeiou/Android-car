<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/comment_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/idea_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/idea_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent90_white"
                android:gravity="top"
                android:hint="发表内容"
                android:inputType="textMultiLine"
                android:minHeight="100dp"
                android:padding="@dimen/common_left_margin"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent90_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/picture_iv"
            android:layout_width="@dimen/common_button_height"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_commentedit_selector" />

        <ImageView
            android:id="@+id/emotion_iv"
            android:layout_width="@dimen/common_button_height"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_emotion_selector" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2-500字"
            android:layout_marginRight="@dimen/common_right_margin"/>
    </LinearLayout>

</LinearLayout>
