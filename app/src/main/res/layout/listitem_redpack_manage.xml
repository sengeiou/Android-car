<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:layout_width="@dimen/dp5"
        android:layout_height="@dimen/dp90"
        android:background="@drawable/button_bg_2" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp90"
        android:layout_weight="1"
        android:background="@color/white">

        <TextView
            android:id="@+id/redpack_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_left_margin"
            android:layout_marginTop="@dimen/dp12"
            android:drawablePadding="@dimen/homeleft_margin"
            android:drawableRight="@drawable/icon_fatie"
            android:textColor="@color/text_color47"
            android:textSize="@dimen/dp15"
            tools:text="红包的名称" />

        <TextView
            android:id="@+id/redpack_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/redpack_name"
            android:layout_marginLeft="@dimen/common_left_margin"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/text_color17"
            android:textSize="@dimen/dp12"
            tools:text="创建时间: 2017-09-25  15:13" />

        <TextView
            android:id="@+id/redpack_joinnums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/redpack_createtime"
            android:layout_marginLeft="@dimen/common_left_margin"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/text_color17"
            android:textSize="@dimen/dp12"
            tools:text="133人参与        参与记录 >>" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/redpack_createtime"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/homeleft_margin"
                android:scaleType="fitXY"
                android:src="@drawable/icon_redpack_chakan" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/icon_redpack_erweima" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/homeleft_margin"
                android:scaleType="fitXY"
                android:src="@drawable/icon_redpack_delete" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp12"
            android:background="@color/btn_color1"
            android:paddingBottom="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="审核中"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </RelativeLayout>

</LinearLayout>
