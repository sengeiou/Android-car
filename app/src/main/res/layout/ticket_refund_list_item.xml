<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:minHeight="34dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp20"
    android:paddingRight="@dimen/dp20">

    <TextView
        android:id="@+id/refund_numTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:gravity="center_vertical"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/font_size_small"
        tools:text="No.123234" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp34"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/refund_numTv">

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/dp85"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="right"
            android:textColor="@color/text_color17"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp3"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toRightOf="@id/title"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/refund_statusIv"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:src="@drawable/refound_n" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/app_layout_bg_color"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
