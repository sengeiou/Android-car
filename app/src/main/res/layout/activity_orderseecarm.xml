<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/orderseemoto_titlerl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:background="@color/style_bg1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_back_white" />

        <TextView
            android:id="@+id/orderfellochat_nikanmetv"
            android:layout_width="274dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_title"
            tools:text="用户名" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/orderseemoto_titlerl"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ordersee_xialaiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/orderfellow_xiala" />

            <LinearLayout
                android:id="@+id/orderseemoto_custommer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingLeft="@dimen/common_left_margin"
                    android:paddingRight="@dimen/common_left_margin">


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/orderfellow_avatar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        fresco:actualImageScaleType="fitXY"
                        fresco:placeholderImage="@drawable/rp_avatar"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:roundAsCircle="true" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/genderImg"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_alignBottom="@id/orderfellow_avatar"
                        android:layout_alignRight="@id/orderfellow_avatar"
                        fresco:placeholderImage="@drawable/icon_men"
                        fresco:placeholderImageScaleType="fitCenter"
                        fresco:roundAsCircle="true" />

                    <TextView
                        android:id="@+id/listitem_complete_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@id/orderfellow_avatar"
                        android:textColor="@color/blue_font1"
                        android:textSize="@dimen/font_size_more"
                        android:maxLength="8"
                        tools:text="潇洒哥" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@id/listitem_complete_nickname"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/oderbuy_isda"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_daren" />

                        <ImageView
                            android:id="@+id/oderbuy_ismodel"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="@dimen/common_left_margin"
                            android:src="@drawable/icon_model" />

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/orderseem_brand"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            fresco:actualImageScaleType="centerInside" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/orderseemoto_nickanmetv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/listitem_complete_nickname"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@id/orderfellow_avatar"
                        tools:text="买方输入名称" />

                    <ImageView
                        android:id="@+id/orderseemoto_call"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="12dp"
                        android:gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/btn_seecall"
                        android:textSize="@dimen/font_size_title"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="12dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/chat_itemtip" />

                <TextView
                    android:id="@+id/ordersee_carNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_left_margin"
                    android:paddingLeft="@dimen/common_left_margin"
                    android:singleLine="true"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/font_size_medium"
                    tools:text="一汽-大众 奥迪A4L 2015款 运动版" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/common_left_margin">

                    <TextView
                        android:id="@+id/orderseem_colorname"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_left_margin"
                        android:singleLine="true"
                        android:textSize="14sp"
                        tools:text="外观 波尔多红 内饰 经典黑" />

                    <ImageView
                        android:id="@+id/orderseem_outimg"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dp" />

                    <ImageView
                        android:id="@+id/orderseem_inimg"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/orderseemoto_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_left_margin"
                    android:layout_marginLeft="@dimen/common_left_margin"
                    android:layout_marginRight="@dimen/common_left_margin"
                    android:background="@drawable/ordersee_cardesc"
                    android:gravity="center_vertical"
                    android:maxEms="500"
                    android:paddingBottom="@dimen/common_left_margin"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textSize="14sp"
                    tools:text="这里是一段需求描述文本，运动尾翼，全景天窗！这里是一段 需求描述文本，运动尾翼，全景天窗！" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/orderseemoto_chatframe"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/orderseemoto_chatmenu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/orderfellow_call"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="拨打电话"
                        android:textColor="@color/text_def"
                        android:textSize="@dimen/font_size_more" />
                </RelativeLayout>
                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/split_line_color3"/>
                <RelativeLayout
                    android:id="@+id/orderfellow_sendmsg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="发送私信"
                        android:textColor="@color/text_def"
                        android:textSize="@dimen/font_size_more" />
                </RelativeLayout>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
