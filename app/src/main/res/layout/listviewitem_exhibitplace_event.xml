<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    android:background="@color/app_main_color1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/common_right_margin">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/listitemt_activtyiv"
        android:layout_width="@dimen/dp90"
        android:layout_height="@dimen/dp68"
        android:layout_marginLeft="10dp"
        android:src="@drawable/cover_default"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImageScaleType="fitXY"
        fresco:placeholderImage="@drawable/icon_car_loading"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp16"
        android:layout_width="0dp"
        android:layout_height="@dimen/img_size_xlarge"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxEms="200"
            android:maxLines="2"
            android:text="达人评测内容评测内容评测内容"
            android:textColor="@color/text_color12"
            android:textSize="@dimen/sp16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/listviewitem_visitors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_left_margin"
                android:textSize="@dimen/sp12"
                android:text="开始时间: 2106.12.01 12:24"
                android:textColor="@color/text_more" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
