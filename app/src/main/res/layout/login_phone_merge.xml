<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phone_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vercode_labeltv"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="验证码"
            android:textSize="@dimen/font_size_title" />

        <EditText
            android:id="@+id/verification_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:maxLines="1"
            android:text=""
            android:textSize="@dimen/font_size_title" />

        <Button
            android:id="@+id/btn_get_verification_code"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/action_get_verification_code"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/login_countdowTv"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="10s"
            android:textColor="@color/text_def"
            android:visibility="gone"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_login_devide" />

    <TextView
        android:visibility="gone"
        android:id="@+id/voice_vercodetv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:paddingTop="5dp"
        android:text="如长时间未收到短信验证码,可点击接收语音验证"
        android:textSize="@dimen/img_size_tiny" />
</LinearLayout>
