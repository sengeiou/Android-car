<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/dp1"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:background="@color/bg_2" />

    <ImageView
        android:id="@+id/item_activity_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:background="@drawable/shape_see_car_circle_s" />

    <RelativeLayout
        android:layout_toRightOf="@+id/item_activity_circle"
        android:id="@+id/item_rl"
        android:padding="@dimen/dp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp12"
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_bg4"
            android:textSize="@dimen/sp10" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/item_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp18"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp10" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/dp16"
        android:background="@drawable/shape_see_car_bg"
        android:layout_marginLeft="@dimen/dp36"
        android:layout_below="@+id/item_rl"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_activity_title"
            android:textColor="@color/text_color14"
            android:textSize="@dimen/sp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/dp15"
            android:layout_below="@+id/item_activity_title"
            android:id="@+id/item_activity_create_by"
            android:textColor="@color/text_color15"
            android:textSize="@dimen/sp12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/dp10"
            android:layout_below="@+id/item_activity_create_by"
            android:id="@+id/item_activity_start"
            android:textColor="@color/text_color15"
            android:textSize="@dimen/sp12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/dp10"
            android:layout_below="@+id/item_activity_start"
            android:id="@+id/item_activity_destination"
            android:textColor="@color/text_color15"
            android:textSize="@dimen/sp12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/dp10"
            android:layout_below="@+id/item_activity_destination"
            android:id="@+id/item_activity_begin_time"
            android:textColor="@color/text_color15"
            android:textSize="@dimen/sp12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/dp12"
            android:layout_below="@+id/item_activity_begin_time"
            android:id="@+id/item_activity_num"
            android:textColor="@color/text_color15"
            android:textSize="@dimen/sp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp7"
            android:layout_below="@+id/item_activity_num"
            android:id="@+id/item_status_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/item_activity_cancel"
                android:textColor="@color/text_more"
                android:textSize="@dimen/sp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/item_activity_status"
                android:textColor="@color/text_selected"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>