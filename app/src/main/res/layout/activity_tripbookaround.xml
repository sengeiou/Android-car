<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/title_bar_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:padding="5dp"
            android:src="@drawable/nav_back_n" />

        <TextView
            android:id="@+id/title_bar_text"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/title_bar_back"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="标点地址"
            android:textColor="@color/voucher_gray"
            android:textSize="@dimen/font_size_title" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/split_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tripbook_around_searchrl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_tripbook_aroundselector">

            <TextView
                style="@style/radiobutton_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:checked="true"
                android:drawableLeft="@drawable/btn_search"
                android:drawablePadding="5dp"
                android:text="搜周边"
                android:textColor="@color/text_color15"
                android:textSize="@dimen/font_size_medium" />
        </RelativeLayout>

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/split_line_color" />

        <RelativeLayout
            android:id="@+id/tripbook_around_couponrl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_tripbook_aroundselector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/btn_coupon"
                android:drawablePadding="5dp"
                android:text="代金券"
                android:textColor="@color/text_color15"
                android:textSize="@dimen/font_size_medium" />
        </RelativeLayout>

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/split_line_color" />

        <RelativeLayout
            android:id="@+id/tripbook_around_tongxrl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_tripbook_aroundselector">

            <TextView
                style="@style/radiobutton_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/btn_tongxing"
                android:drawablePadding="5dp"
                android:text="搜同行"
                android:textColor="@color/text_color15"
                android:textSize="@dimen/font_size_medium" />
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/tripbookaround_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
