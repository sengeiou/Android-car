<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/style_bg8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="222银元"
                android:textColor="@color/tab_text_s_color"
                android:textSize="@dimen/font_size_more" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_marginLeft="3dp"
                android:text="from"
                android:textColor="@color/text_more"
                android:textSize="@dimen/font_size_more" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_toRightOf="@+id/text"
                android:text="用户昵称8个字"
                android:textColor="@color/text_bg"
                android:textSize="@dimen/font_size_more" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:text="07.13 14:24"
                android:layout_below="@+id/name"
                android:textColor="@color/text_color17"
                android:textSize="@dimen/font_size_more" />

        </RelativeLayout>

        <TextView
            android:id="@+id/bonuspoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="￥5000"
            android:textColor="@color/text_color36"
            android:textSize="@dimen/font_size_s_medium" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/text_content_color" />
</LinearLayout>