<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/see_car_record_all"
    android:layout_height="200dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/dp1"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:background="@color/bg_2" />

    <ImageView
        android:id="@+id/item_see_car_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:background="@drawable/shape_see_car_circle_s" />

    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_toRightOf="@+id/item_see_car_circle"
        android:padding="@dimen/dp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp10"
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="@color/btn_bg4"
            android:textSize="@dimen/sp10" />

        <TextView
            android:layout_alignParentRight="true"
            android:text="提交看车记录"
            android:id="@+id/item_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp18"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp10" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/dp18"
        android:background="@drawable/shape_see_car_bg"
        android:layout_marginLeft="@dimen/dp35"
        android:layout_below="@+id/item_rl"
        android:layout_marginTop="@dimen/dp16"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_order"
                android:textColor="@color/tab_text_n_color"
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/item_status"
                android:textColor="@color/tab_text_n_color"
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/dp11"
            android:layout_below="@+id/item_order"
            android:id="@+id/item_name"
            android:textColor="@color/text_color12"
            android:textSize="@dimen/sp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/dp15"
            android:layout_below="@+id/item_name"
            android:id="@+id/item_color"
            android:textColor="@color/text_color15"
            android:textSize="@dimen/sp12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:maxLines="2"
            android:layout_marginTop="@dimen/dp15"
            android:layout_below="@+id/item_color"
            android:id="@+id/item_describle"
            android:textColor="@color/text_color14"
            android:textSize="@dimen/sp12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:maxLines="2"
            android:layout_marginTop="@dimen/dp16"
            android:layout_below="@+id/item_describle"
            android:id="@+id/item_saler"
            android:textColor="@color/btn_color1"
            android:textSize="@dimen/sp12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>