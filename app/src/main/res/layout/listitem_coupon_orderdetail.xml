<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderDetail_rootrl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/couponoder_coderl"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/couponoder_codertv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_left_margin"
            android:text="N0.: 1862 2312 2322"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/orderStatusTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="未消费"
            android:textColor="@color/text_color17"
            android:textSize="@dimen/font_size_small" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/coupon_orderDetailIv"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:src="@drawable/more_icon" />
    <TextView
        android:id="@+id/couponoder_timetv"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/couponoder_coderl"
        android:gravity="right"
        android:paddingRight="20dp"
        android:text="123234"
        android:textColor="@color/text_color17"
        android:textSize="8sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_line_color3"/>
</RelativeLayout>
