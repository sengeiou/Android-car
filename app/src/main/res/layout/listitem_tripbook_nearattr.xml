<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/white"
    android:minHeight="68dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nearatt_nametv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_left_margin"
            android:layout_weight="1"
            android:gravity="bottom"
            android:maxLines="1"
            android:textColor="@color/text_color12"
            android:textSize="@dimen/font_size_title"
            tools:text="商家名" />

        <TextView
            android:id="@+id/nearatt_scoretv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/common_left_margin"
            android:gravity="bottom|right"
            android:textColor="@color/text_color20"
            android:textSize="@dimen/font_size_small"
            tools:text="4.0分" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nearatt_addresstv"
            android:drawableLeft="@drawable/icon_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_left_margin"
            android:drawablePadding="@dimen/common_left_margin"
            android:gravity="center_vertical|left"
            android:textColor="@color/text_color17"
            tools:text="地址"
            android:textSize="@dimen/font_size_tiny"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/nearatt_distancetv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/common_left_margin"
            android:gravity="center_vertical|right"
            android:textColor="@color/text_color17"
            android:textSize="@dimen/font_size_tiny"
            tools:text="423.0km" />
    </LinearLayout>
</LinearLayout>
