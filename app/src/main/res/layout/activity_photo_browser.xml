<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_layout_bg_color"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/phtonbig_page_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/photobig_count_tv"
                android:layout_width="100dp"
                android:layout_height="@dimen/common_button_height"
                android:layout_gravity="top|left"
                android:layout_marginBottom="@dimen/common_item_height"
                android:layout_marginLeft="@dimen/common_left_margin"
                android:background="@color/transparent30"
                android:gravity="center"
                android:text="1/12"
                android:textColor="@color/text_color11"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/photobig_close_tv"
                android:layout_width="80dp"
                android:layout_height="@dimen/common_button_height"
                android:layout_gravity="top|right"
                android:layout_marginBottom="@dimen/common_item_height"
                android:layout_marginRight="@dimen/common_right_margin"
                android:background="@color/transparent30"
                android:gravity="center"
                android:text="关闭"
                android:textColor="@color/text_color11"
                android:textSize="@dimen/font_size_medium" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_gravity="bottom|center"
                android:background="@color/app_title_color1">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/common_right_margin"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_medium" />
            </RelativeLayout>
        </FrameLayout>


    </LinearLayout>
</merge>