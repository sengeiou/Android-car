<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <RelativeLayout
            android:id="@+id/headerImgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_left_margin">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/motodetail_avatar_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/im_default"
                fresco:placeholderImage="@drawable/rp_avatar"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:roundAsCircle="true" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/genderImg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@id/motodetail_avatar_iv"
                android:layout_alignRight="@id/motodetail_avatar_iv"
                fresco:placeholderImage="@drawable/icon_men"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:roundAsCircle="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_left_margin"
            android:layout_toRightOf="@id/headerImgLayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nametv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:maxLength="8"
                    android:text="潇洒哥你好呀够了"
                    android:textColor="@color/text_color21"
                    android:textSize="@dimen/font_size_medium" />

                <ImageView
                    android:id="@+id/comment_model_tv"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_model" />

                <ImageView
                    android:id="@+id/comment_popman_tv"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_daren" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/brandLogo"
                    android:layout_width="40dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/im_default"
                    fresco:actualImageScaleType="fitCenter"
                    fresco:placeholderImage="@drawable/icon_car_loading"
                    fresco:placeholderImageScaleType="fitCenter" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:text="刚刚"
                android:textColor="@color/text_color17"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/common_left_margin"
            android:scaleType="centerInside"
            android:src="@drawable/loc_drop_down"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_left_margin"
            android:src="@drawable/btn_guanzbu" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:layout_marginRight="@dimen/common_left_margin"
        android:layout_marginTop="8dp"
        android:text="一年一度的车展又开始了，看中了哪款就赶快下手，我在车展现场等你，140字！！！"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/sp14" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:layout_marginRight="@dimen/common_left_margin"
        android:layout_marginTop="@dimen/common_left_margin">

<!--        <com.tgf.kcwc.view.home.NineGridlayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tgf.kcwc.view.home.CustomImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:layout_marginRight="@dimen/common_left_margin"
        android:layout_marginTop="@dimen/common_left_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_location"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="重庆市渝北区龙溪镇松石道80号附5号"
            android:textColor="@color/text_color17" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:layout_marginRight="@dimen/common_left_margin"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/listviewitem_visitors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/listviewitem_focuson"
            android:layout_toStartOf="@+id/listviewitem_focuson"
            android:drawableLeft="@drawable/icon_visitors"
            android:drawablePadding="@dimen/common_left_margin"
            android:text="267"
            android:textColor="@color/text_nav_def_color"
            android:textSize="@dimen/font_size_tiny" />

        <TextView
            android:id="@+id/listviewitem_focuson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_left_margin"
            android:drawableLeft="@drawable/icon_like"
            android:drawablePadding="@dimen/common_left_margin"
            android:text="267"
            android:textColor="@color/text_nav_def_color"
            android:textSize="@dimen/font_size_tiny" />

        <TextView
            android:id="@+id/listviewitem_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/common_left_margin"
            android:drawableLeft="@drawable/icon_comments"
            android:drawablePadding="@dimen/common_left_margin"
            android:text="267"
            android:textColor="@color/text_nav_def_color"
            android:textSize="@dimen/font_size_tiny" />
    </LinearLayout>
</LinearLayout>
