<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="48dp"
            android:gravity="center_horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@drawable/rp_avatar"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@drawable/rp_avatar"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:roundAsCircle="true"
                fresco:roundWithOverlayColor="@color/white"
                fresco:roundedCornerRadius="10dp"
                fresco:roundingBorderColor="@color/headframe"
                fresco:roundingBorderWidth="2dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:maxLength="10"
                    android:text="潇洒哥"
                    android:textColor="@color/text_color6"
                    android:textSize="@dimen/font_size_title" />

                <ImageView
                    android:id="@+id/comment_model_tv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_model" />

                <ImageView
                    android:id="@+id/drivdetails_convene_da"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_daren" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/drivdetails_convene_brandLogo"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/im_default"
                    fresco:actualImageScaleType="fitCenter"
                    fresco:placeholderImage="@drawable/icon_dazong"
                    fresco:placeholderImageScaleType="fitCenter" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="@color/color_login_devide"
                    android:textSize="@dimen/font_size_title" />

                <TextView
                    android:id="@+id/integraltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textColor="@color/style_bg7"
                    android:textSize="@dimen/font_size_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_integralgradebg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="3dp"
                        android:src="@drawable/icon_dengji" />

                    <TextView
                        android:id="@+id/grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:text="13"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>

                <TextView
                    android:id="@+id/gold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="金币 5000  银元 50000"
                    android:textColor="@color/text_color12"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_integralcut_gold_bg"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="2504金币"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_title"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/split_line_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/app_layout_bg_color" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/split_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alltext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/style_bg1"
                android:textSize="@dimen/font_size_more" />

            <TextView
                android:id="@+id/allbelow"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@color/style_bg1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commoditytext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="商品"
                android:textColor="@color/text_color15"
                android:textSize="@dimen/font_size_more" />

            <TextView
                android:id="@+id/commoditybelow"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@color/style_bg1"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ticketstext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="门票"
                android:textColor="@color/text_color15"
                android:textSize="@dimen/font_size_more" />

            <TextView
                android:id="@+id/ticketsbelow"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@color/style_bg1"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vouchertext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="代金券"
                android:textColor="@color/text_color15"
                android:textSize="@dimen/font_size_more" />

            <TextView
                android:id="@+id/vouchertextbelow"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@color/style_bg1"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/app_layout_bg_color" />

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/rl_modulename_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_layout_bg_color"
            android:divider="@color/white"
            android:dividerHeight="0px"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="none"
            android:verticalSpacing="10dp" />
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

</LinearLayout>