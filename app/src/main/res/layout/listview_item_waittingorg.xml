<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listitem_root_waitingorg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_color1"
    android:padding="@dimen/common_right_margin"
    android:orientation="vertical">


        <TextView
            android:id="@+id/org_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            tools:text="1 重庆新元素雅和汽车销售"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/font_size_title" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:drawableLeft="@drawable/icon_location"
            android:drawablePadding="10dp"
            android:id="@+id/orgs_addresstv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            tools:text="地址：重庆市区华北废墟"
            android:textColor="@color/text_def"
            android:textSize="@dimen/font_size_tiny" />

        <TextView
            android:id="@+id/waitingpric_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_right_margin"
            tools:text="142km"
            android:textColor="@color/text_def"/>
    </RelativeLayout>

</LinearLayout>
