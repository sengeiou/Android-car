<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="110dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp110"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/button_bg_17">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/titleBar"
                android:layout_marginLeft="@dimen/dp20"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@drawable/cover_default"
                fresco:failureImageScaleType="fitXY"
                fresco:placeholderImage="@drawable/cover_default"
                fresco:placeholderImageScaleType="fitXY"
                fresco:roundAsCircle="true" />

            <TextView
                android:id="@+id/cardNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/icon"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@id/icon"
                android:textColor="@color/text_color12"
                android:textSize="@dimen/sp18" />

            <TextView
                android:id="@+id/cardTypeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/icon"
                android:layout_alignLeft="@id/cardNameTv"
                android:textColor="@color/text_color12"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/cardNumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/cardTypeTv"
                android:layout_below="@id/icon"
                android:layout_marginTop="@dimen/dp20"
                android:textColor="@color/text_color12"
                android:textSize="@dimen/sp24" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>