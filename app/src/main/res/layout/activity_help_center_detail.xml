<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/app_layout_bg_color"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/style_bg1"
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height">

        <ImageButton
            android:id="@+id/title_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:padding="5dp"
            android:src="@drawable/nav_back_selector" />

        <TextView
            android:ellipsize="end"
            android:id="@+id/title_bar_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_color11"
            android:textSize="@dimen/font_size_title" />

        <com.tgf.kcwc.view.FunctionView
            android:id="@+id/title_function_btn"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />

        <View
            android:id="@+id/split"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/split_line_color"
            android:visibility="gone" />
    </RelativeLayout>
    <TextView
        android:id="@+id/item_detail_title"
        android:padding="@dimen/dp15"
        android:layout_width="match_parent"
        android:text="123"
        android:background="@color/white"
        android:textSize="@dimen/sp16"
        android:textColor="@color/style_bg7"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/bg_1"/>
    <TextView
        android:padding="@dimen/dp15"
        android:text="123"
        android:background="@color/white"
        android:textSize="@dimen/sp14"
        android:textColor="@color/font_black"
        android:layout_width="match_parent"
        android:id="@+id/item_detail_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/bg_1"/>
    <TextView
        android:padding="@dimen/dp11"
        android:text="相关链接"
        android:background="@color/white"
        android:textSize="@dimen/sp12"
        android:textColor="@color/style_bg7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>