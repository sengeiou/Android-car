<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:banner="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_layout_bg_color"
    android:orientation="vertical">

    <com.tgf.kcwc.view.bannerview.Banner
        android:id="@+id/homepage_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_coupon_head"
        android:background="@color/white"
        banner:image_scale_type="fit_xy"
        banner:is_auto_play="true" />

    <com.tgf.kcwc.view.MyGridView
        android:id="@+id/home_menugv"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/white"
        android:numColumns="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_marginTop="@dimen/list_divider_height"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/latest_exhibition_rl"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@color/app_main_color1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/lastest_exhibit_tiltetv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/titleyellow_tag"
                android:drawablePadding="@dimen/common_left_margin"
                android:gravity="center_vertical"
                android:text="预约看车"
                android:textColor="@color/text_selected"
                android:textSize="@dimen/font_size_title" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_right_margin"
                android:rotation="-90"
                android:src="@drawable/loc_drop_down"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider2" />

        <LinearLayout
            android:id="@+id/home_commitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="特定外观、特定配置  想看什么，就看什么"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_left_margin"
                android:paddingRight="@dimen/common_left_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_bg_graywhite"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="6dp"
                    android:text="选择意向车型"
                    android:textColor="@color/text_color17"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_left_margin"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_bg_graywhite"
                    android:gravity="center_vertical|left"
                    android:hint="输入手机号"
                    android:paddingLeft="6dp"
                    android:textColorHint="@color/text_color17"
                    android:textSize="@dimen/sp14" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_margin="15dp"
                android:background="@drawable/button_bg_2"
                android:gravity="center"
                android:text="一键预约  及时响应"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>