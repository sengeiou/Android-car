<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_layout_bg_color"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tgf.kcwc.view.SmoothListView.SmoothListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/tab_indicator_s_line"
            android:dividerHeight="0dp">

        </com.tgf.kcwc.view.SmoothListView.SmoothListView>


        <LinearLayout
            android:id="@+id/please_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_button_height"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <include
                android:id="@+id/listact_categroy"
                layout="@layout/common_filter_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />


            <View
                android:layout_width="1px"
                android:layout_height="20dp"
                android:background="@color/app_layout_bg_color2" />

            <include
                android:id="@+id/listact_rank"
                layout="@layout/common_filter_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <View
                android:layout_width="1px"
                android:layout_height="20dp"
                android:background="@color/app_layout_bg_color2" />

            <include
                android:id="@+id/listact_time"
                layout="@layout/common_filter_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <View
                android:layout_width="1px"
                android:layout_height="20dp"
                android:background="@color/app_layout_bg_color2" />

            <TextView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="4"
                android:paddingLeft="2dp"
                android:singleLine="true"
                android:text="更多"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/font_size_medium" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>